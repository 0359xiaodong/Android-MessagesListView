<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ruenzuo.messageslistview.example.activities.MessengerActivity">
    <EditText
        android:id="@+id/editTextMessage"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/message_hint"/>
    <com.ruenzuo.messageslistview.widget.MessagesListView
        android:id="@+id/messageListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:recipientDrawable="@drawable/bill_gates"
        app:senderDrawable="@drawable/steve_jobs"
        app:senderColor="@color/styled_sender_color"
        app:recipientColor="@color/styled_recipient_color"
        app:dateTextColor="@color/styled_date_text_color"
        app:messageTextColor="@color/styled_message_text_color"
        android:layout_above="@id/editTextMessage"/>
</RelativeLayout>
